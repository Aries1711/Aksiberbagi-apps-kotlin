<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:background="#f0f8ff"
    android:paddingBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageDonatur"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/love_pink_stroke"/>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight=".8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginStart="20dp"
                        android:id="@+id/nameDonatur"
                        android:textAlignment="textStart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Anonim"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/amountDonatur"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:text="Rp 1.020.000"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/timeDonatur"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="13 menit lalu"
                        android:layout_marginEnd="10dp"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/prayDonatur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="Semoga semua manusia mendapatkan keadilan dengan adanya superman yang rela banting tulang "
            android:textColor="@color/navigation_state_list"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>