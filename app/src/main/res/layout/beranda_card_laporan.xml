<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="180dp"
    app:cardCornerRadius="5dp"
    android:elevation="2dp"
    android:layout_height="200dp">
    <ImageView
        android:id="@+id/imageLaporan"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/titleProgramLaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sedekah Air Untuk Pesantren dan .."
            android:textSize="10sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/laporanSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telah Disalurkan Air ke Ponpes As-syifa"
            android:textSize="6sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="8sp"
                android:layout_weight=".6"
                android:layout_gravity="center"
                android:id="@+id/lokasiLaporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Situbondo, Jawa Timur."
                android:textStyle="bold"/>
            <FrameLayout
                android:layout_weight=".4"
                android:background="@drawable/rounded_status_donasi"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/tanggalLaporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="27 Sep"
                    android:textColor="@color/colorInputStrokeBlue"
                    android:textSize="10sp"
                    android:textStyle="bold"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>