<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.KalkulatorActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarKalkulator"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/upAppbarKalkulatorZakat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="top"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            android:background="@color/colorInputStrokeBlue"
            android:theme="@style/ToolbarProgramDetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextAppearance="@style/Toolbar.TitleText" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_donasi_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_gravity="center"
                        android:text="Zakat Penghasilan"
                        android:textStyle="bold"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorIndicatorPrimary"
                        android:layout_gravity="center"
                        android:text="Zakat Perdagangan"
                        android:textStyle="bold"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorIndicatorPrimary"
                        android:layout_gravity="center"
                        android:text="Zakat Penghasilan"
                        android:textStyle="bold"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorIndicatorPrimary"
                        android:layout_gravity="center"
                        android:text="Zakat Perdagangan"
                        android:textStyle="bold"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarKalkulator">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/KalkulatorPenghasilan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextSecondary"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:text="Hitung Zakat Penghasilan"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:padding="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_linear_layout_width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Harga beras per Kg"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 11.000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextSecondary"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Nisab ( 520 Kg )"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 5.720.000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextSecondary"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/KalkulatorPerdagangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/KalkulatorEmas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/KalkulatorTabungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>