<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.KalkulatorActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarKalkulator"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#FFFFFF"
            android:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/upAppbarKalkulatorZakat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                android:background="@color/colorInputStrokeBlue"
                android:theme="@style/ToolbarProgramDetail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:titleTextAppearance="@style/Toolbar.TitleText" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/btnKalkulatorPenghasilan"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:background="@drawable/publik_ajukan_title_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/colorIndicatorPrimary"
                            android:layout_gravity="center"
                            android:text="Zakat Penghasilan"
                            android:textStyle="bold"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/btnKalkulatorEmas"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:background="@drawable/publik_ajukan_title_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
