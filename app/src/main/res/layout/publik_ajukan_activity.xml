<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PublikAjukanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/upAppbarPublikAjukan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:background="@color/colorInputStrokeBlue"
        android:theme="@style/ToolbarProgramDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/Toolbar.TitleText" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upAppbarPublikAjukan">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layoutBannerPublikAjukan"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publik Ajukan"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/colorTextPrimary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aksiberbagi mendengar ajuan publik"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/favorit_banner"/>
                <LinearLayout
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/favorit"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextPrimary"
                            android:text="Ajukan Program Baru"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="mengajukan program baru untuk digalangkan dana"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/favorit"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/colorTextPrimary"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:text="Ajukan Pendanaan"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="mengajukan penyaluran dana dari program yang sudah ada"/>
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ajukanBtnForm"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#f86048"
                    android:fontFamily="@font/actor"
                    android:text="Ajukan"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="15dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutFormAjukan"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Form Ajuan Publik"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/colorTextPrimary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selangkah lagi kami mendengar ceritamu"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ceritakan profil anda"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/namaProfilLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Masukkan nama anda"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/namaProfil"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/alamatProfilLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Masukkan Alamat anda"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/alamatProfil"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/waProfilLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Masukkan wa anda"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/waProfil"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailProfilLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Masukkan nama anda"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailProfil"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ceritakan ide anda dan kenapa anda memilih ide tersebut"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/deskripsiIdeLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Deskripsikan hal yang ingin anda ajukan secara jelas dan terperinci"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/deskripsiIde"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"
                        android:lines="3"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ceritakan siapa tim anda, potensi tim tersebut dan bagaimana mengelola tim tersebut"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/timLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Ceritakan secara jelas dan terperinci"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/timInput"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"
                        android:lines="3"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dimana dan kapan program tersebut akan dilaksanakan"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/programLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Ceritakan secara jelas dan terperinci"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/programInput"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"
                        android:lines="3"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ceritakan siapa penerima manfaat, seberapa besar impact program anda"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/penerimaLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Ceritakan secara jelas dan terperinci"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/penerimaInput"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"
                        android:lines="3"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apa ide dan langkah besar anda agar program tersebarluas"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/rencanaLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Ceritakan secara jelas dan terperinci"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/rencanaInput"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"
                        android:lines="3"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apa rencana tahapan aksi 30-40 hari anda dan tim ?"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/rencana30Layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Ceritakan secara jelas dan terperinci"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/rencana30Input"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"
                        android:lines="3"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apa indikator keberhasilan program tersebut?"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/indikatorLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Ceritakan secara jelas dan terperinci"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/indikatorInput"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"
                        android:lines="3"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Berapa biaya program tersebut?"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/biayaProgramLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Ceritakan secara jelas dan terperinci"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/biayaInput"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"
                        android:lines="3"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ceritakan Tantangan dan solusi program tersebut"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tantanganLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Ceritakan secara jelas dan terperinci"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tantanganInput"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:inputType="text"
                        android:lines="3"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/publik_ajukan_title_form"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lampirkan Berkas dokumentasi atau proposal pengajuan program Anda"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lampiranLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorTextSecondary"
                    android:hint="Ceritakan secara jelas dan terperinci"
                    android:textColorHint="@color/colorTextSecondary"
                    app:boxStrokeColor="@color/colorTextSecondary"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:hintTextColor="@color/colorTextSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lampiranInput"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/rounded_donasi_download"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload berkas sebagai media pendukung dari ajuan Anda, dapat berupa gambar maupun file. Jika gambar yang Anda upload lebih dari 1, maka silahan dicompress (.zip atau .rar) terlebih dahulu."
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ajukanBtnFormSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#f86048"
                    android:fontFamily="@font/actor"
                    android:text="Kirim ajuan"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="15dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>