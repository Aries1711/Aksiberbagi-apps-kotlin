<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/app_notif_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0.3"
        android:src="@drawable/aksiberbagi_blue"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.7"
        >
        <TextView
            android:id="@+id/titleNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donasi Rutin"
            android:textColor="@color/colorTextPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/subtitleNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panggilan untuk kebaikan untuk Aksiberbagi"
            android:textColor="@color/colorTextSecondary"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>