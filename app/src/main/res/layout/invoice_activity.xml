<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:forceDarkAllowed="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.InvoiceActivity">

    <include
        layout="@layout/up_appbar_invoice"
        android:id="@+id/includeAppbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/includeAppbar"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layoutIntruksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Intruksi Pembayaran"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Mohon Transfer sesuai nominal di bawah ini :"
                    android:textSize="14sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/invoiceNominal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Rp 100.332"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/salinBtnNominal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Salin"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorInputStrokeBlue"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layoutNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rounded_note_with_stroke">
                    <ImageView
                        android:layout_weight=".2"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_note"/>

                    <LinearLayout
                        android:layout_weight=".8"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PENTING"
                                android:textColor="#fc813f"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_marginStart="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:text="Mohon Transfer tepat sampai"
                                android:textColor="@color/colorIndicatorPrimary"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:text="3 angka terakhir agar donasi anda dapat diproses secara otomatis"
                            android:textColor="@color/colorIndicatorPrimary"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_linear_layout_width">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight=".5"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jumlah donasi Anda"/>
                        <TextView
                            android:id="@+id/invoiceNominalRaw"
                            android:layout_weight=".5"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 100.000"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorBreakLine"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight=".5"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kode Unik(*)"/>
                        <TextView
                            android:id="@+id/invoiceNominalKode"
                            android:layout_weight=".5"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="332"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="*3 angka terakhir sebagai kode unik akan di donasikan"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <View
                android:id="@+id/breakLayoutInstruksi"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/colorBreakLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutIntruksi"/>

            <LinearLayout
                android:id="@+id/layoutketeranganBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/breakLayoutInstruksi">
                <TextView
                    android:id="@+id/invoiceBankHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran dilakukan ke rekening A.n Yayasan Aksi Berbagi"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_detail_background">
                    <ImageView
                        android:id="@+id/logoBank"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="40dp"
                        android:layout_gravity="center" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight=".5"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Bank"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/invoiceBankNama"
                            android:layout_weight=".5"
                            android:textSize="16sp"
                            android:textAlignment="textEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BNI / BNI Syariah"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorIndicatorPrimary" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight=".33"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Rekening"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/invoiceRekening"
                            android:layout_weight=".33"
                            android:textSize="16sp"
                            android:textAlignment="textEnd"
                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0584453514"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/salinBtnRekening"
                            android:layout_weight=".2"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salin"
                            android:textColor="#eb6b34"
                            android:background="@drawable/rounded_donasi_download"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorIndicatorPrimary" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight=".5"
                            android:textSize="16sp"
                            android:textAlignment="textStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Invoice"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/invoiceKode"
                            android:layout_weight=".5"
                            android:textSize="16sp"
                            android:textAlignment="textEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SRQ-0584453514"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorIndicatorPrimary" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight=".5"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:textAlignment="textStart"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Judul program"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />
                        <TextView
                            android:id="@+id/invoiceProgramJudul"
                            android:layout_weight=".5"
                            android:textSize="16sp"
                            android:textAlignment="textEnd"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Simpan Hartamu Dilangit, Sedekah Jariyah Atas Nama Orang Tua"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>