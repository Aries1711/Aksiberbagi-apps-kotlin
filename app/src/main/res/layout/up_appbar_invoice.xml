<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/upAppbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorInputStrokeBlue"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <com.google.android.material.circularreveal.CircularRevealLinearLayout
                android:id="@+id/circularRevealLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/logoAksiberbagi"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight=".2"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/bannerlogo"
                        app:srcCompat="@drawable/logo_app" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:text="AksiBerbagi.com"
                        android:textStyle="bold"
                        android:textColor="@color/colorIndicatorPrimary"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </com.google.android.material.circularreveal.CircularRevealLinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>