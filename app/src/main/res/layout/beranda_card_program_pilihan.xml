<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="260dp"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    android:layout_height="200dp">
    <ImageView
        android:id="@+id/imageProgramPilihan"
        android:layout_width="match_parent"
        android:layout_height="130dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/titleProgramPilihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sedekah Air Untuk Pesantren dan Masjid"
                android:textSize="10sp"
                android:textStyle="bold"
                />
            <ProgressBar
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_weight=".7"
                android:layout_height="5dp"
                android:progress="40"
                android:progressDrawable="@drawable/progress_bar_style"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="10sp"
                    android:layout_weight=".65"
                    android:id="@+id/terkumpulCardPilihan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="460.000.800"
                    android:textStyle="bold"/>
                <TextView
                    android:textSize="10sp"
                    android:layout_weight=".3"
                    android:textAlignment="textEnd"
                    android:id="@+id/sisaDayCardPilihan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35 hari lagi"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>