<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ZakatActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/upAppbarZakat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:background="@color/colorInputStrokeBlue"
        android:theme="@style/ToolbarProgramDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/Toolbar.TitleText" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upAppbarZakat">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Mari membayar zakat"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorTextSecondary"/>
            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:textColor="@color/colorInputPressFalse"
                android:layout_height="wrap_content"
                android:text="Hitung dan bayar zakatmu yuk. Kami siap menyalurkannya. "
                android:textSize="14sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/btnZakatBayar"
                    android:layout_weight=".5"
                    android:layout_marginEnd="5dp"
                    android:padding="10dp"
                    android:background="@drawable/rounded_linear_layout_width"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/zakat_new_a"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salurkan"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnZakatHitung"
                    android:layout_weight=".5"
                    android:layout_marginStart="5dp"
                    android:padding="10dp"
                    android:background="@drawable/rounded_linear_layout_width"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/zakat_new_b"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kalkulator"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorBreakLine"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Bayar zakat sesuai hartamu yuk."
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorTextSecondary"/>
            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorInputPressFalse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yuk pilih jenis zakatmu melalui tombol dibawah ini"
                android:textSize="14sp"
                android:textStyle="bold"/>

<!--            list card zakat -->

            <LinearLayout
                android:layout_marginTop="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="340dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="5dp"
                    android:layout_height="215dp">
                    <ImageView
                        android:id="@+id/imageZakatTabungan"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"/>
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zakat Dari harta simpanan"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnZakatTabungan"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="20dp"
                            android:backgroundTint="#f86048"
                            android:fontFamily="@font/actor"
                            android:text="Zakat sekarang"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:cornerRadius="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="340dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp"
                    android:layout_height="215dp">
                    <ImageView
                        android:id="@+id/imageZakatEmas"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"/>
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zakat Dari harta emas dan perak"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnZakatEmas"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="20dp"
                            android:backgroundTint="#f86048"
                            android:fontFamily="@font/actor"
                            android:text="Zakat sekarang"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:cornerRadius="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="340dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp"
                    android:layout_height="215dp">
                    <ImageView
                        android:id="@+id/imageZakatPerdagangan"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"/>
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zakat Dari hasil usaha dagang"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnZakatPerdagangan"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="20dp"
                            android:backgroundTint="#f86048"
                            android:fontFamily="@font/actor"
                            android:text="Zakat sekarang"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:cornerRadius="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="340dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="215dp">
                    <ImageView
                        android:id="@+id/imageZakatPenghasilan"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"/>
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zakat Dari penghasilan"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnZakatPenghasilan"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="20dp"
                            android:backgroundTint="#f86048"
                            android:fontFamily="@font/actor"
                            android:text="Zakat sekarang"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:cornerRadius="15dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>