<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/programAllDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageProgramAll"
            android:layout_width="140dp"
            android:layout_height="100dp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/programAllDesc"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleProgramAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sedekah Terbaik Untuk Anak Yatim .."
            android:textColor="@color/colorTextPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/summaryProgramAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sesurga Bersama Rasullaah"
            android:textColor="@color/colorTextSecondary"
            android:textSize="10sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/volunteerProgamAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aksiberbagi.com"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/verifikasi" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight=".7"
            android:progress="40"
            android:progressDrawable="@drawable/progress_bar_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight=".1"
                android:text="Rp"
                android:textColor="@color/colorTextPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fundProgramAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="456.978.086"
                android:textColor="@color/colorTextPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dayProgramAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="45 hari lagi"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextSecondary"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/breakSubmenuLaporan"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorBreakLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/programAllDesc"/>

</androidx.constraintlayout.widget.ConstraintLayout>