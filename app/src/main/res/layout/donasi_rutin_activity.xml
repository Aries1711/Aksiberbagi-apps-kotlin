<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DonasiRutinActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/upAppbarDonasiRutin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:background="@color/colorInputStrokeBlue"
        android:theme="@style/ToolbarProgramDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/Toolbar.TitleText" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upAppbarDonasiRutin">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/donasiRutinBanner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/headerDonasiRutin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Form Pendaftaran Donasi Rutin"
                android:textColor="@color/colorInputPressFalse"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/donasiRutinBanner" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/LayoutFormDonasiRutin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerDonasiRutin">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/programDonasiRutin"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorInputStrokeBlue"
                    android:hint="Pilih Program"
                    app:boxStrokeColor="@color/colorInputStrokeBlue"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/colorInputStrokeBlue">
                    <AutoCompleteTextView
                        android:id="@+id/pilihProgram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="none"
                        android:textColor="@color/colorInputStrokeBlue"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/frekuensiDonasiRutin"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorInputStrokeBlue"
                    android:hint="Frekuensi Donasi"
                    app:boxStrokeColor="@color/colorInputStrokeBlue"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/colorInputStrokeBlue">
                    <AutoCompleteTextView
                        android:id="@+id/pilihFrekuensi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="none"
                        android:textColor="@color/colorInputStrokeBlue"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:visibility="invisible"
                android:orientation="vertical"
                android:id="@+id/layoutFrekuensiMingguan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mingguanDonasiRutin"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/colorInputStrokeBlue"
                    android:hint="Pilih Hari"
                    app:boxStrokeColor="@color/colorInputStrokeBlue"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/colorInputStrokeBlue">
                    <AutoCompleteTextView
                        android:id="@+id/pilihHari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:inputType="none"
                        android:textColor="@color/colorInputStrokeBlue"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
                <LinearLayout
                    android:visibility="invisible"
                    android:orientation="vertical"
                    android:id="@+id/layoutFrekuensiBulanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/bulananDonasiRutin"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="@color/colorInputStrokeBlue"
                        android:hint="Pilih Tanggal"
                        app:boxStrokeColor="@color/colorInputStrokeBlue"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/colorInputStrokeBlue">
                        <AutoCompleteTextView
                            android:id="@+id/pilihTanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:inputType="none"
                            android:textColor="@color/colorInputStrokeBlue"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>