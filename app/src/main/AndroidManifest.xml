<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inddevid.aksiberbagi_donatur">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".view.ProgramAllActivity"
            android:theme="@style/AppMaterial">
        </activity>
        <activity
            android:name=".view.ProgramDetailActivity"
            android:theme="@style/AppMaterial"></activity>
        <activity
            android:name=".view.SearchActivity"
            android:theme="@style/AppMaterial"
            android:windowSoftInputMode="stateVisible"></activity>
        <activity
            android:name=".view.DashboardActivity"
            android:theme="@style/AppMaterial" /> <!-- Start Auth android app -->
        <activity
            android:name=".view.SignUpActivity"
            android:theme="@style/AppMaterial" />
        <activity
            android:name=".view.LoginActivity"
            android:theme="@style/AppMaterial" />
        <activity
            android:name=".view.PasswordSetActivity"
            android:theme="@style/AppMaterial" /> <!-- End Auth android app -->
        <!-- Start activity splash And Intro -->
        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.IntroActivity"
            android:theme="@style/AppMaterial">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- End activity splash And Intro -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>